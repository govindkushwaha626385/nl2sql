{
  "name": "matrimonial-ai-backend",
  "version": "1.0.0",
  "description": "Industry-level NL2SQL system for Matrimonial Database",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon -e ts --exec \"npx tsx src/app.ts\"",
    "build": "tsc",
    "migrate": "node -r ts-node/register node_modules/knex/bin/cli.js migrate:latest --knexfile knexfile.cjs",
    "seed": "node -r ts-node/register node_modules/knex/bin/cli.js seed:run --knexfile knexfile.cjs",
    "sync": "npx tsx src/scripts/sync_metadata.ts",
    "seed-embeddings": "npx tsx src/scripts/seed-metadata-embeddings.ts",
    "test-query": "npx tsx src/scripts/test-query.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "knex": "^3.1.0",
    "pg": "^8.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.5",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
